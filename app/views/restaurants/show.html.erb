<div class="card" style="width: 500px;">
  <h1 class="card-img-top"><%= @restaurant.name %></h1>
    <h5 class="card-title"><%= @restaurant.category %> cuisine</h5>
    <p class="card-text"><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>
</div>



<hr>


<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="d-flex list-group-item justify-content-around">
      <div><%= review.content %>
      </div>
      <div><%= review.rating %> /5
      </div>
      </li>
  <% end %>
</ul>

<hr>

<%= simple_form_for [@restaurant, @review] do |f|%>
  <%= f.input :content %>
  <%= f.select :rating, Review::RATING %>
  <%= f.submit %>
<% end %>
